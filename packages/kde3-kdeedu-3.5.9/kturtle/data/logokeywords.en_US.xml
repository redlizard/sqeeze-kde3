<?xml version="1.0"?>
<!DOCTYPE logokeywords>

<logokeywords lang="en_US" ver="0.01">

<!-- scope -->
  <command name="begin">
    <keyword>[</keyword>
  </command>
  
  <command name="end">
    <keyword>]</keyword>
  </command>



