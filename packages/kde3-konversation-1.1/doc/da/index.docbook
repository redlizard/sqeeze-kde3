				<area id="pt-highlight-4" coords="1 1"/>
				<area id="pt-highlight-5" coords="1 1"/>
				<area id="pt-highlight-6" coords="1 1"/>
				<area id="pt-highlight-7" coords="1 1"/>
				<area id="pt-highlight-8" coords="1 1"/>
				<area id="pt-highlight-9" coords="1 1"/>
			</areaspec>
