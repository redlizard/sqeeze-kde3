#!/bin/sh

set -e

. /usr/share/debconf/confmodule

db_version 2.0

if [ "$1" = configure ] && [ -z "$2" ]; then
	set +e
	db_fget kde3-kdesudo/kdesu seen
	err=$?
	set -e

	case $err in
	0)
		if [ "$RET" = true ]; then
			db_fset kde3-kdesudo/kdesu seen true
			db_get kde3-kdesudo/kdesu
			db_set kde3-kdesudo/kdesu "$RET"
			exit
		fi
		;;
	10)
		;;
	*)
		echo "db_fget exited with $err" >&2
		exit $err
		;;
	esac
fi

db_input low kde3-kdesudo/kdesu || true
db_go
