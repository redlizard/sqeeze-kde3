use DCOP;

my $app = $ARGV[0]; shift @ARGV;
my $dcopid = "";
my $testername = "";
my $reading_debug = 0;
my $debug="";
my $runnergui;

my $client = new DCOP;
$client->attach();

while (<>)
{
    $runnergui = getDCOPObject();
    my $line = $_;

    print $_;

    if ( $line =~ /KUnitTest_Debug_End\[.*\]/ )
    {
        $ret = $runnergui->addDebugInfo($testername, $debug);

        $debug = "";

        # stop reading
        $reading_debug = 0;
    }
    elsif ( $line =~ /KUnitTest_Debug_EndSlot\[.*\]/ )
    {
        $ret = $runnergui->addSlotDebugInfo($testername, $slotname, $debug);

        $line = "";
        $debug = "";
        $slotname = "";
    }
    elsif ( $line =~ /KUnitTest_Debug_BeginSlot\[(.*)\]/ )
    {
        $slotname = $1;
        $line = "";
    }

    if ( $reading_debug )
    {
        if ( $line =~ /^check:(.*\[[0-9]+\])/ )
        {
            $line = $1.":\n";
        }

        $debug = $debug.$line;
    }    
    
    if ( $line =~ /KUnitTest_Debug_Start\[(.*)\]/ )
    {
        $testername = $1;
        $reading_debug = 1;
        $debug="";
    }
}

sub getDCOPObject
{
    if ( $dcopid eq "" )
    {
        $allapps = $client->registeredApplications();
        my $i = 0;
        while ( ! ($allapps->[$i] eq "") )
        {
            if ( $allapps->[$i] =~ /$app/ )
            {
                print "found: ".$allapps->[$i]."\n";
                $dcopid = $allapps->[$i];
                break;
            }
        
            $i = $i + 1;
        }

        $object = $client->createObject($dcopid, "Runner"); 
    }

    return $object;
}