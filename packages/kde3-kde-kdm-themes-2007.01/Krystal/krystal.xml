<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">
<greeter>
 <item type="pixmap">
  <normal file="background.jpg"/>
  <pos x="0" y="0" width="100%" height="100%"/>
 </item>
 <item type="rect">
  <pos x="5" y="-130" width="100%" height="120"/>
  <fixed>
   <item type="rect">
    <pos x="0" y="5" width="100%" height="100%"/>
    <box orientation="horizontal" spacing="1" xpadding="1">
     
     <item type="rect" id="session_button" button="true"> 
      <pos y="50%" anchor="w" width="box" height="box"/>
      <box orientation="horizontal" spacing="1" xpadding="1">
       <item type="pixmap">
        <normal file="session_normal.png" />
        <prelight file="session_over.png"/>
        <active file="session_pressed.png" />
        <pos y="50%" anchor="w"/>
       </item> 
      </box>
     </item>
     
     <item type="rect" id="system_button" button="true">
      <pos y="50%" anchor="w" width="box" height="box"/>
      <box orientation="horizontal" spacing="1" xpadding="1">
       <item type="pixmap">
        <normal file="system_normal.png" />
        <prelight file="system_over.png"/>
        <active file="system_pressed.png" />
        <pos y="50%" anchor="w"/>
       </item>
      </box>
     </item>
     
				</box>
			</item>
		</fixed>
	</item>
	<item type="label" id="clock">
		<normal color="#ABABAB" font="Sans 12"/>
		<pos x="-5" y="-10" anchor="e"/>
		<text>%c</text>
	</item>
	

	
	<item type="rect">
			<pos anchor="c" x="50%" y="45%" width="box" height="box"/>
			<box orientation="vertical"  >
				<item type="pixmap">
					<normal file="login.png" />
				</item>
			</box>
		<fixed>
				<item type="label" id="pam-error">
					<pos anchor="n" x="50%" y="110%"/>
					<normal color="#000000" font="Sans 12"/>
					<text></text>
				</item>
		</fixed>
			
			
	</item>
	
	<item type="rect" id="loginbox">
			
			<pos anchor="c" x="50%" y="45%" width="300" height="400" />
			<!-- dialog box -->
			<box orientation="vertical"   spacing="4" >
				
				<item type="entry" id="user-entry">
					<pos anchor="c"  x="174" y="364" height="22" width="130"/>
				</item>
				<item type="entry" id="pw-entry">
					<pos anchor="c" x="174" y="364" height="22" width="130"/>
				</item>
				<item type="rect" id="login_button" button="true">	
					<pos  anchor="c"  x="270" y="324"  height="box" width="box"/>
					<box orientation="horizontal" spacing="1" xpadding="1">
						<item type="pixmap">
							<normal file="enter_normal.png" />
							<prelight file="enter_over.png"/>
       <active file="enter_pressed.png" />
       
      </item> 
     </box>
    </item>
			</box>
	</item>
	
</greeter>


